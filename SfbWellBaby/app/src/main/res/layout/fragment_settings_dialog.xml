<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.microsoft.office.sfb.sfbwellbaby.SettingsDialog"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Meeting URI:"
        android:id="@+id/meetingURILabel"
        android:layout_gravity="left"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meetingURIText"
        android:layout_gravity="center_horizontal|left"
        android:layout_below="@+id/meetingURILabel"
        android:layout_alignLeft="@+id/meetingURILabel"
        android:layout_alignStart="@+id/meetingURILabel" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/closeButton"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/meetingURIText"
        android:layout_toRightOf="@+id/meetingURILabel"
        android:layout_toEndOf="@+id/meetingURILabel" />



</RelativeLayout>
